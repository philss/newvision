<div class="home_page_box">
  <% @articles.each do |article| %>
    <div class="posts_boxes">
      <h2 class="article_title"><%= link_to article.title, article %></h2>
      <div class="author_box">
        Criado por: <%= link_to(article.author.name, article.author, :class => "author_name") %> 
        <%= article_date article.created_at %>
      </div>
      <div class="article_body"><%= article.body.html_safe %></div>
    </div>
  <% end %>
</div>

